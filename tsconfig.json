{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "types": ["node"],
    // "strict": true 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}